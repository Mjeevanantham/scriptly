{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test", "out", "dist", "build", "src/ui/**/*.tsx"]
}

